<section class="snippets-list">
  <div class="list-header">
    <a href="#" data-modal-open="#new-snippet">New snippet</a>
  </div>

  {% for snippet in snippets %}
    <a href="/app/categories/{{ activeCategory }}/snippets/{{ snippet.id }}">
    <strong>{{ snippet.title }}</strong>
    <p>{{ snippet.excerpt }}</p>
  </a>
  {% endfor %}
</section>

<div class="modal" id="new-snippet">
  <form class="modal-content" method="POST" action="/app/categories/{{ activeCategory }}/snippets/create">
    <input type="text" name="title" placeholder="Snippet title">

    <div class="content-container">
      <textarea name="content"  class="mde" placeholder="Snippet content"></textarea>
    </div>
    <button type="submit">save</button>
    <a href="#" data-modal-close="#new-snippet">cancel</a>
  </form>
</div>
